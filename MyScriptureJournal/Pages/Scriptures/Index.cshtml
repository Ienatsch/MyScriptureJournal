@page
@model MyScriptureJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/scriptureIndex.css" />
<div class="searchAddContainer">
    <form>
        <p>
            <label>
                @Html.RadioButton("searchByValue", "book", true)Book
            </label>
            <label>
                @Html.RadioButton("searchByValue", "noteKeyword")Note Keyword
            </label>
            <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
    <p>
        <a asp-page="Create">Add Scripture</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.Scripture[0].Book)
                </a>
            </th>
            <th class="smallCol">
                    @Html.DisplayNameFor(model => model.Scripture[0].Chapter)
                </a>
            </th>
            <th class="smallCol">
                @Html.DisplayNameFor(model => model.Scripture[0].LineNumber)
            </th>
            <th class="largeCol">
                @Html.DisplayNameFor(model => model.Scripture[0].Verse)
            </th>
            <th class="largeCol">
                @Html.DisplayNameFor(model => model.Scripture[0].Note)
            </th>
            <th class="smallCol">
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Scripture[0].DateAdded)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td class="smallCol">
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td class="smallCol">
                @Html.DisplayFor(modelItem => item.LineNumber)
            </td>
            <td class="largeCol">
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td class="largeCol">
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td class="smallCol">
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                <button type="button" class="btn btn-primary btn-sm btn-success"><a asp-page="./Edit" asp-route-id="@item.Id">Edit</a></button>
                <button type="button" class="btn btn-primary btn-info"><a asp-page="./Details" asp-route-id="@item.Id">Details</a></button>
                <button type="button" class="btn btn-primary btn-sm btn-danger"><a asp-page="./Delete" asp-route-id="@item.Id">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
